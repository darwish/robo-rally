{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "module": "system",
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom", "es5", "es2015.promise"],
    "outFile": "app/public/js/main.js"
  },
  "include": [
    "app/typescript",
    "typings/**.d.ts"
  ],
  "exclude": [
    "app/node_modules"
  ]
}
